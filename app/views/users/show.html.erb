<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      <section class="stats">
            <%= render 'shared/stats' %>
      </section>
    </div>
    <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>
</div>
